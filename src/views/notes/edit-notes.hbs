<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Contacto</h3>
        </div>
        <div class="card-body">
            {{!-- Se utiliza un metodo PUT para enviar el parametro --}}
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombres" value="{{note.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="last_name" class="form-control" placeholder="Apellidos" value="{{note.last_name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="phone_number" class="form-control" placeholder="999999999" value="{{note.phone_number}}">
                </div>
                <div class="form-group">
                    <input type="text" name="city" class="form-control" placeholder="Ciudad" value="{{note.city}}">
                </div>
                <div class="form-group">
                    <input type="text" name="address" class="form-control" placeholder="DirecciÃ³n" value="{{note.adress}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>